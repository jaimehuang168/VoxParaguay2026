# VoxParaguay 2026 - Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/voxparaguay

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# ENCRYPTION (Law 7593/2025 Compliance)
# Generate with: python -c "from app.utils.encryption import generate_encryption_key; print(generate_encryption_key())"
# ===========================================
ENCRYPTION_KEY=           # v1 key (required) - 32-byte base64 encoded
ENCRYPTION_KEY_V2=        # v2 key for rotation (optional)
BLIND_INDEX_KEY=          # Independent key for searchable encryption (required)

# ===========================================
# TWILIO (Voice Calls)
# ===========================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=+595XXXXXXXXX

# ===========================================
# META (WhatsApp, Facebook, Instagram)
# ===========================================
META_APP_ID=
META_APP_SECRET=
META_VERIFY_TOKEN=voxparaguay_verify_2026
META_ACCESS_TOKEN=

# ===========================================
# ANTHROPIC (Claude AI)
# ===========================================
ANTHROPIC_API_KEY=

# ===========================================
# MAPBOX (Geographic Visualization)
# ===========================================
MAPBOX_ACCESS_TOKEN=

# ===========================================
# APPLICATION
# ===========================================
DEBUG=false
CORS_ORIGINS=["http://localhost:3000"]
